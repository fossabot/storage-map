{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "types",
    "module": "esnext",
    "target": "ES2015",
    "outDir": "lib",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "allowJs": false,
    "strict": true,
    "lib": [
      "es2015",
      "DOM"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.spec.ts"
  ]
}
